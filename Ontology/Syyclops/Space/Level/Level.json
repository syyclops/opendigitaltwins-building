{
  "@id": "dtmi:com:syyclops:Level;1",
  "@type": "Interface",
  "displayName": {
    "en": "Level"
  },
  "description": {
    "en": "The level of a building or other structure, a.k.a. storey, floor, etc."
  },
  "extends": [
    "dtmi:com:syyclops:Space;1"
  ],
  "contents": [
    {
      "@type": "Property",
      "description": {
        "en": "A number indicating the ordinal number of this level within the building. Note that the implementation of this numbering scheme and its starting point is implementation-specific; e.g., the fifth floor below ground may be 0 in some systems, and -5 in others."
      },
      "displayName": {
        "en": "Level Number"
      },
      "name": "levelNumber",
      "schema": "integer",
      "writable": true,
      "@id": "dtmi:com:syyclops:Level:levelNumber;1"
    },
    {
      "@type": [
        "Property",
        "Length"
      ],
      "name": "elevation",
      "displayName": {
        "en": "Elevation (Sea Level)"
      },
      "writable": true,
      "schema": "double",
      "unit": "metre",
      "@id": "dtmi:com:syyclops:Level:elevation;1",
      "description": {
        "en": "Property indicating the elevation of the level in the Level interface."
      }
    },
    {
      "@type": [
        "Property",
        "ValueAnnotation",
        "Override"
      ],
      "displayName": {
        "en": "Elevation Unit"
      },
      "name": "elevationUnit",
      "annotates": "elevation",
      "overrides": "unit",
      "schema": "LengthUnit",
      "writable": true,
      "@id": "dtmi:com:syyclops:Level:elevationUnit;1",
      "description": {
        "en": "Property defining the unit of measurement for level elevation."
      }
    },
    {
      "@type": [
        "Property",
        "Length"
      ],
      "name": "siteElevation",
      "displayName": {
        "en": "Elevation (Site)"
      },
      "writable": true,
      "schema": "double",
      "unit": "metre",
      "@id": "dtmi:com:syyclops:Level:siteElevation;1",
      "description": {
        "en": "Property representing the site elevation of the level in the Level interface."
      }
    },
    {
      "@type": [
        "Property",
        "ValueAnnotation",
        "Override"
      ],
      "displayName": {
        "en": "Site Elevation Unit"
      },
      "name": "siteElevationUnit",
      "annotates": "siteElevation",
      "overrides": "unit",
      "schema": "LengthUnit",
      "writable": true,
      "@id": "dtmi:com:syyclops:Level:siteElevationUnit;1",
      "description": {
        "en": "Property defining the unit of measurement for site elevation within the Level interface."
      }
    }
  ],
  "@context": [
    "dtmi:dtdl:context;3",
    "dtmi:dtdl:extension:quantitativeTypes;1",
    "dtmi:dtdl:extension:annotation;1",
    "dtmi:dtdl:extension:overriding;1"
  ]
}